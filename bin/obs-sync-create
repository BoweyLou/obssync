#!/bin/bash
"""
obs-sync-create - Create missing counterpart tasks

This is a convenience script that invokes the create missing counterparts
functionality through the main obs_tools.py launcher.

Usage:
  obs-sync-create [OPTIONS]

Examples:
  obs-sync-create --dry-run                      # Show what would be created
  obs-sync-create --apply --direction obs-to-rem # Create Reminders from Obsidian
  obs-sync-create --apply --since 7              # Create counterparts for recent tasks
"""

# Find the script directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"

# Execute through the main launcher
exec python3 "$PROJECT_ROOT/obs_tools.py" sync create "$@"